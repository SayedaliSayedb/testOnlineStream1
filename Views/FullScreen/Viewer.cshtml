@{
    ViewData["Title"] = "نمایش تمام‌صفحه پخش زنده";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>پخش زنده مسابقه</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100;200;300;400;500;600;700;800;900&display=swap');

        :root {
            --primary-font: 'Vazirmatn', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            --secondary-font: 'Vazirmatn', Arial, sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            background: #000;
            color: #fff;
            font-family: var(--primary-font);
            overflow: hidden;
            height: 100%;
            width: 100%;
            position: fixed;
        }

        .main-container {
            height: 100vh;
            width: 100vw;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #000;
            overflow: hidden;
        }

        #mainVideoContainer {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 10;
            background: #000;
        }

        #mainVideo {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: #000;
        }

        .top-bar {
            position: fixed;
            top: env(safe-area-inset-top, 10px);
            right: 10px;
            z-index: 100;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px 12px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            max-width: calc(100vw - 20px);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .user-details {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .user-name {
            font-weight: bold;
            font-size: 13px;
            font-family: var(--primary-font);
        }

        .user-score {
            font-size: 11px;
            color: #ffd700;
            font-family: var(--primary-font);
        }

        .hearts-section {
            display: flex;
            align-items: center;
            gap: 6px;
            background: rgba(255, 0, 0, 0.2);
            padding: 5px 10px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .hearts-count {
            font-weight: bold;
            font-size: 14px;
            font-family: var(--primary-font);
        }

        .heart-icon {
            color: #ff3366;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .heart-icon:hover {
                transform: scale(1.2);
            }

        .chat-container {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 35vh;
            max-height: 35vh;
            z-index: 90;
            display: flex;
            flex-direction: column;
            background: transparent;
            pointer-events: none;
        }

        .chat-gradient-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 40%, transparent 100%);
            pointer-events: none;
            z-index: 91;
        }

        .chat-messages {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 4px;
            padding: 10px 15px 70px 15px;
            overflow-y: auto;
            z-index: 92;
            pointer-events: auto;
            max-height: calc(35vh - 80px);
        }

        .message {
            padding: 8px 12px;
            font-size: 14px;
            line-height: 1.4;
            color: rgba(255, 255, 255, 0.95);
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
            font-family: var(--secondary-font);
            animation: messageSlide 0.5s ease;
            transform-origin: bottom;
            min-height: 40px;
            display: flex;
            align-items: center;
            word-break: break-word;
            max-width: 85%;
            align-self: flex-start;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }

        @@keyframes messageSlide {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .chat-input-container {
            position: fixed;
            bottom: env(safe-area-inset-bottom, 10px);
            left: 10px;
            right: 10px;
            display: flex;
            gap: 10px;
            align-items: center;
            z-index: 95;
            pointer-events: auto;
            padding: 5px 0;
        }

        .chat-input {
            flex: 1;
            display: flex;
            gap: 10px;
        }

            .chat-input input {
                flex: 1;
                background: rgba(255, 255, 255, 0.15);
                border: none;
                border-radius: 25px;
                padding: 14px 20px;
                color: white;
                outline: none;
                font-size: 14px;
                font-family: var(--primary-font);
                backdrop-filter: blur(10px);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

                .chat-input input::placeholder {
                    color: rgba(255, 255, 255, 0.7);
                }

                .chat-input input:disabled {
                    opacity: 0.5;
                    cursor: not-allowed;
                }

        .send-btn {
            background: rgba(0, 123, 255, 0.9);
            border: none;
            border-radius: 50%;
            width: 52px;
            height: 52px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 20px rgba(0, 123, 255, 0.4);
            flex-shrink: 0;
        }

            .send-btn:disabled {
                background: rgba(108, 117, 125, 0.9);
                cursor: not-allowed;
                transform: none;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

            .send-btn i {
                font-size: 20px;
                position: relative;
                left: -1px;
            }

            .send-btn:hover:not(:disabled) {
                background: rgba(0, 123, 255, 1);
                transform: scale(1.08);
                box-shadow: 0 6px 25px rgba(0, 123, 255, 0.6);
            }

        .floating-heart-btn {
            background: linear-gradient(135deg, #ff3366, #ff6b9c);
            border: none;
            border-radius: 50%;
            width: 52px;
            height: 52px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 20px rgba(255, 51, 102, 0.4);
            flex-shrink: 0;
        }

            .floating-heart-btn:disabled {
                background: linear-gradient(135deg, #6c757d, #495057);
                cursor: not-allowed;
                transform: none;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

            .floating-heart-btn i {
                font-size: 22px;
                filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
            }

            .floating-heart-btn:hover:not(:disabled) {
                transform: scale(1.08);
                box-shadow: 0 6px 25px rgba(255, 51, 102, 0.6);
            }

            .floating-heart-btn:active:not(:disabled) {
                transform: scale(0.95);
            }

            .floating-heart-btn.pulse {
                animation: heartPulse 0.6s ease;
            }

        @@keyframes heartPulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.2);
            }

            100% {
                transform: scale(1);
            }
        }

        #streamsListContainer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            z-index: 150; /* افزایش z-index برای نمایش در جلوی چت */
            display: flex;
            justify-content: center;
            pointer-events: auto;
            transition: transform 0.32s cubic-bezier(.22,.9,.28,1), opacity .24s ease;
            transform: translateY(100%); /* ابتدا کاملاً مخفی */
            opacity: 0;
            padding: 10px 12px;
            background: transparent;
        }

        .streams-box {
            width: min(1100px, calc(100% - 36px));
            background: linear-gradient(180deg, rgba(0,0,0,0.8), rgba(0,0,0,0.7));
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 12px;
            padding: 8px;
            backdrop-filter: blur(20px);
        }

        .streams-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
            padding: 4px 6px;
        }

        .streams-title {
            font-size: 14px;
            font-weight: 700;
            color: #fff
        }

        .toggle-streams-btn {
            background: rgba(255,255,255,0.1);
            border: none;
            color: #fff;
            cursor: pointer;
            padding: 6px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .toggle-streams-btn:hover {
                background: rgba(255,255,255,0.2);
            }

        .streams-horizontal {
            display: flex;
            gap: 10px;
            padding: 8px 6px;
            overflow-x: auto;
            white-space: nowrap;
            align-items: center;
        }

        .stream-thumbnail {
            min-width: 160px;
            max-width: 220px;
            height: 96px;
            border-radius: 10px;
            overflow: hidden;
            flex: 0 0 auto;
            background: #0b0b0b;
            border: 1px solid rgba(255,255,255,0.1);
            transition: transform .18s ease, box-shadow .18s ease;
            cursor: pointer;
        }

            .stream-thumbnail:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.6)
            }

            .stream-thumbnail.active {
                border-color: rgba(78,161,255,0.5);
                box-shadow: 0 12px 34px rgba(78,161,255,0.2)
            }

        .thumbnail-video {
            width: 100%;
            height: 60%;
            background: #000;
        }

        .stream-info {
            padding: 6px 8px;
            background: transparent
        }

        .stream-title {
            font-size: 13px;
            font-weight: 700;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap
        }

        .stream-stats {
            font-size: 11px;
            color: #ddd;
            display: flex;
            justify-content: space-between;
            margin-top: 4px
        }

        #streamsListContainer.visible {
            transform: translateY(0);
            opacity: 1;
            pointer-events: auto;
        }

        #revealStreamsBtn {
            position: fixed;
            left: 20px;
            bottom: 90px;
            z-index: 96;
            width: 52px;
            height: 52px;
            border-radius: 50%;
            background: linear-gradient(135deg, #6c757d, #495057);
            border: 1px solid rgba(255,255,255,0.15);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            color: #fff;
            box-shadow: 0 6px 25px rgba(0,0,0,0.4);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

            #revealStreamsBtn i {
                font-size: 20px;
            }

            #revealStreamsBtn:hover {
                transform: scale(1.08);
                box-shadow: 0 8px 30px rgba(0,0,0,0.5);
            }

        .streams-horizontal::-webkit-scrollbar {
            height: 8px
        }

        .streams-horizontal::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.1);
            border-radius: 6px
        }

        #connectionStatus {
            position: fixed;
            top: env(safe-area-inset-top, 20px);
            left: 20px;
            z-index: 100;
            background: rgba(0, 0, 0, 0.7);
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            font-family: var(--primary-font);
        }

        .status-connected {
            color: #28a745;
        }

        .status-disconnected {
            color: #dc3545;
        }

        .status-connecting {
            color: #ffc107;
        }

        #emptyState {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: #000;
            z-index: 5;
        }

        .empty-icon {
            font-size: 4rem;
            color: #333;
            margin-bottom: 20px;
        }

        .empty-text {
            color: #666;
            font-size: 1.2rem;
            text-align: center;
            font-family: var(--primary-font);
        }

        .heart-animation {
            position: absolute;
            font-size: 24px;
            color: #ff3366;
            opacity: 0;
            z-index: 60;
            pointer-events: none;
        }

        @@keyframes floatUp {
            0% {
                transform: translateY(0) scale(0.5);
                opacity: 1;
            }

            100% {
                transform: translateY(-100px) scale(1.5);
                opacity: 0;
            }
        }

        .chat-messages::-webkit-scrollbar {
            width: 6px;
        }

        .chat-messages::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
        }

        .chat-messages::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 3px;
        }

            .chat-messages::-webkit-scrollbar-thumb:hover {
                background: rgba(255, 255, 255, 0.5);
            }

        /* Quiz Overlay Styles */
        #quizOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.9);
            z-index: 200;
            display: none;
            align-items: center;
            justify-content: center;
        }

        .quiz-card {
            background: rgba(30, 30, 30, 0.95);
            border-radius: 20px;
            padding: 2rem;
            max-width: 600px;
            width: 90%;
            border: 1px solid rgba(255,255,255,0.1);
            backdrop-filter: blur(20px);
        }

        .quiz-timer {
            font-size: 3rem;
            font-weight: bold;
            text-align: center;
            color: #ffd700;
            margin-bottom: 1rem;
            text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
        }

        .quiz-question {
            font-size: 1.3rem;
            text-align: center;
            margin-bottom: 2rem;
            color: white;
            line-height: 1.6;
        }

        .quiz-options {
            display: grid;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .quiz-option {
            background: rgba(255,255,255,0.1);
            border: 2px solid rgba(255,255,255,0.2);
            border-radius: 12px;
            padding: 1rem 1.5rem;
            color: white;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
        }

            .quiz-option:hover {
                background: rgba(255,255,255,0.2);
                transform: translateY(-2px);
            }

            .quiz-option:disabled {
                opacity: 0.6;
                cursor: not-allowed;
            }

        .quiz-result {
            text-align: center;
            padding: 1rem;
            border-radius: 10px;
            margin-top: 1rem;
            display: none;
        }

        .result-correct {
            background: rgba(40, 167, 69, 0.2);
            border: 1px solid #28a745;
            color: #28a745;
        }

        .result-incorrect {
            background: rgba(220, 53, 69, 0.2);
            border: 1px solid #dc3545;
            color: #dc3545;
        }

        /* استایل‌های موبایل - بهبود یافته */
        @@media (max-width: 768px) {
            .chat-container {
                height: 30vh;
                max-height: 30vh;
            }

            .chat-messages {
                padding: 8px 12px 60px 12px;
                max-height: calc(30vh - 70px);
            }

            .chat-input-container {
                bottom: env(safe-area-inset-bottom, 8px);
                left: 8px;
                right: 8px;
            }

            .send-btn,
            .floating-heart-btn,
            #revealStreamsBtn {
                width: 48px;
                height: 48px;
            }

                .send-btn i,
                #revealStreamsBtn i {
                    font-size: 18px;
                }

                .floating-heart-btn i {
                    font-size: 20px;
                }

            #revealStreamsBtn {
                left: 15px;
                bottom: 75px;
            }

            .top-bar {
                top: env(safe-area-inset-top, 5px);
                right: 5px;
                padding: 6px 10px;
            }

            .user-avatar {
                width: 35px;
                height: 35px;
            }

            .user-name {
                font-size: 12px;
            }

            .user-score {
                font-size: 10px;
            }

            .hearts-count {
                font-size: 14px;
            }

            .heart-icon {
                font-size: 18px;
            }

            .chat-input input {
                padding: 12px 16px;
                font-size: 16px;
            }

            .message {
                font-size: 14px;
                padding: 10px 14px;
                max-width: 90%;
            }

            #streamsListContainer {
                padding: 8px 10px;
            }

            .streams-box {
                width: calc(100% - 20px);
            }

            .stream-thumbnail {
                min-width: 140px;
                height: 85px;
            }

            .quiz-card {
                padding: 1.5rem;
                margin: 1rem;
            }

            .quiz-timer {
                font-size: 2.5rem;
            }

            .quiz-question {
                font-size: 1.1rem;
            }
        }

        @@media (max-width: 480px) {
            .chat-container {
                height: 28vh;
                max-height: 28vh;
            }

            .chat-messages {
                padding: 6px 10px 55px 10px;
                max-height: calc(28vh - 65px);
            }

            .chat-input-container {
                bottom: env(safe-area-inset-bottom, 5px);
                left: 5px;
                right: 5px;
            }

            .send-btn,
            .floating-heart-btn,
            #revealStreamsBtn {
                width: 44px;
                height: 44px;
            }

                .send-btn i,
                #revealStreamsBtn i {
                    font-size: 17px;
                }

                .floating-heart-btn i {
                    font-size: 19px;
                }

            #revealStreamsBtn {
                left: 12px;
                bottom: 65px;
            }

            .chat-input input {
                padding: 10px 14px;
                font-size: 16px;
            }

            .message {
                font-size: 13px;
                padding: 8px 12px;
            }

            .stream-thumbnail {
                min-width: 120px;
                height: 75px;
            }

            .stream-title {
                font-size: 12px;
            }

            .stream-stats {
                font-size: 10px;
            }

            .quiz-card {
                padding: 1rem;
            }

            .quiz-timer {
                font-size: 2rem;
            }

            .quiz-question {
                font-size: 1rem;
            }

            .quiz-option {
                padding: 0.8rem 1rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 360px) {
            .chat-container {
                height: 26vh;
                max-height: 26vh;
            }

            .chat-input-container {
                bottom: env(safe-area-inset-bottom, 3px);
            }

            #revealStreamsBtn {
                bottom: 60px;
            }
        }

        @@supports(padding: max(0px)) {
            .top-bar, .chat-input-container {
                padding-left: max(10px, env(safe-area-inset-left));
                padding-right: max(10px, env(safe-area-inset-right));
            }
        }

        .chat-messages {
            -webkit-overflow-scrolling: touch;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="top-bar" style="transform: translate(-10px, 15px) !important;">
            <div class="user-info">
                <img class="user-avatar" src="data:image/svg+xml;base64,">
                <div class="user-details">
                    <div class="user-name">کاربر مسابقه</div>
                    <div class="user-score">امتیاز: 1250</div>
                </div>
            </div>
            <div class="hearts-section">
                <div class="hearts-count">150</div>
                <i class="bi bi-heart-fill heart-icon"></i>
            </div>
        </div>

        <div class="chat-container">
            <div class="chat-gradient-overlay"></div>
            <div class="chat-messages" id="chatMessages"></div>
            <div class="chat-input-container" style="transform: translateY(-10px) !important">
                <div class="chat-input">
                    <button class="send-btn" id="sendMessage"><i class="bi bi-send"></i></button>
                    <input type="text" placeholder="پیام خود را بنویسید..." id="messageInput">
                </div>
                <button class="floating-heart-btn" id="floatingHeartButton">
                    <i class="bi bi-heart-fill"></i>
                </button>
            </div>
        </div>

        <div id="mainVideoContainer">
            <video id="mainVideo" autoplay playsinline></video>
        </div>

        <div id="streamsListContainer">
            <div class="streams-box">
                <div class="streams-header">
                    <div class="streams-title">
                        <i class="bi bi-collection-play"></i>
                        پخش‌های زنده فعال (<span id="streamsCount">0</span>)
                    </div>
                    <button class="toggle-streams-btn" id="toggleStreamsList" aria-expanded="false" title="بستن لیست">
                        <i class="bi bi-chevron-down" id="toggleIcon"></i>
                    </button>
                </div>

                <div class="streams-horizontal" id="streamsGrid"></div>
            </div>
        </div>

        <button id="revealStreamsBtn" title="نمایش پخش‌ها"><i class="bi bi-chevron-up" style="font-size:18px"></i></button>

        <div id="connectionStatus" class="status-connecting" style="transform: translate(5px, 15px) !important;">
            <i class="bi bi-wifi"></i> در حال اتصال...
        </div>

        <div id="emptyState" style="display:none;">
            <i class="bi bi-camera-video-off empty-icon"></i>
            <div class="empty-text">هیچ پخش زنده‌ای در حال حاضر فعال نیست</div>
            <div class="mt-3">
