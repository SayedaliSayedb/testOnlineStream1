@{
    ViewData["Title"] = "نمایش تمام‌صفحه پخش زنده";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>پخش زنده تمام‌صفحه</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: #000;
            color: #fff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow: hidden;
            height: 100vh;
            width: 100vw;
        }

        .main-container {
            height: 100vh;
            width: 100vw;
            position: relative;
            background: #000;
        }

        /* ویدیوی اصلی */
        #mainVideoContainer {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 10;
            background: #000;
        }

        #mainVideo {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: #000;
        }

        /* لیست پخش‌ها در پایین */
        #streamsListContainer {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(10px);
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            z-index: 20;
            transition: transform 0.3s ease;
            max-height: 30vh;
            overflow-y: auto;
        }

            #streamsListContainer.collapsed {
                transform: translateY(100%);
            }

        .streams-header {
            padding: 10px 15px;
            background: rgba(0, 0, 0, 0.9);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .streams-title {
            font-size: 14px;
            font-weight: bold;
            color: #fff;
        }

        .toggle-streams-btn {
            background: none;
            border: none;
            color: #fff;
            cursor: pointer;
            padding: 5px;
            border-radius: 3px;
            transition: background 0.3s ease;
        }

            .toggle-streams-btn:hover {
                background: rgba(255, 255, 255, 0.1);
            }

        .streams-grid {
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 8px;
            padding: 10px;
        }

        .stream-thumbnail {
            background: #1a1a1a;
            border-radius: 8px;
            overflow: hidden;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            position: relative;
        }

            .stream-thumbnail:hover {
                transform: translateY(-2px);
                border-color: rgba(255, 255, 255, 0.3);
            }

            .stream-thumbnail.active {
                border-color: #007bff;
                box-shadow: 0 0 20px rgba(0, 123, 255, 0.3);
            }

        .thumbnail-video {
            width: 100%;
            height: 120px;
            object-fit: cover;
            background: #000;
        }

        .stream-info {
            padding: 8px;
            background: rgba(0, 0, 0, 0.7);
        }

        .stream-title {
            font-size: 12px;
            font-weight: bold;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            margin-bottom: 2px;
        }

        .stream-stats {
            font-size: 10px;
            color: #ccc;
            display: flex;
            justify-content: space-between;
        }

        /* کنترل‌های پخش */
        #controls {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 30;
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            padding: 10px;
            display: flex;
            gap: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

            #controls:hover,
            .main-container:hover #controls {
                opacity: 1;
            }

        .control-btn {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: #fff;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

            .control-btn:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: scale(1.1);
            }

            .control-btn.exit {
                background: rgba(220, 53, 69, 0.7);
            }

                .control-btn.exit:hover {
                    background: rgba(220, 53, 69, 0.9);
                }

        /* وضعیت اتصال */
        #connectionStatus {
            position: absolute;
            top: 20px;
            left: 20px;
            z-index: 30;
            background: rgba(0, 0, 0, 0.7);
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            backdrop-filter: blur(10px);
        }

        .status-connected {
            color: #28a745;
            border: 1px solid #28a745;
        }

        .status-connecting {
            color: #ffc107;
            border: 1px solid #ffc107;
        }

        .status-error {
            color: #dc3545;
            border: 1px solid #dc3545;
        }

        /* صفحه خالی */
        #emptyState {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: #000;
            z-index: 5;
        }

        .empty-icon {
            font-size: 4rem;
            color: #333;
            margin-bottom: 20px;
        }

        .empty-text {
            color: #666;
            font-size: 1.2rem;
            text-align: center;
        }

        /* اسکرول بار سفارشی */
        .streams-grid::-webkit-scrollbar {
            width: 6px;
        }

        .streams-grid::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
        }

        .streams-grid::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 3px;
        }

            .streams-grid::-webkit-scrollbar-thumb:hover {
                background: rgba(255, 255, 255, 0.5);
            }

        /* انیمیشن‌ها */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }
        /* استایل‌های جدید برای placeholder */
        .thumbnail-placeholder {
            width: 100%;
            height: 120px;
            background: #2a2a2a;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #666;
        }

            .thumbnail-placeholder .bi {
                font-size: 2rem;
                margin-bottom: 8px;
            }

        .loading-text {
            font-size: 11px;
            color: #888;
        }

        .thumbnail-video {
            width: 100%;
            height: 120px;
            object-fit: cover;
            background: #000;
        }

        /* بهبود استایل لیو ایندیکیتور */
        .live-indicator {
            color: #dc3545;
            font-size: 10px;
            font-weight: bold;
        }
        /* بهبود نمایش ویدیو */
        #mainVideo {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: #000;
        }

        .thumbnail-video {
            width: 100%;
            height: 120px;
            object-fit: cover;
            background: #000;
        }

        /* بهبود placeholder */
        .thumbnail-placeholder {
            width: 100%;
            height: 120px;
            background: #2a2a2a;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #666;
            border-radius: 4px;
        }

            .thumbnail-placeholder .bi {
                font-size: 2rem;
                margin-bottom: 8px;
            }

        .loading-text {
            font-size: 11px;
            color: #888;
        }

        /* وضعیت‌های مختلف */
        .stream-thumbnail.connected .thumbnail-placeholder {
            background: #1a3c1a;
            color: #4CAF50;
        }

        .stream-thumbnail.error .thumbnail-placeholder {
            background: #3c1a1a;
            color: #f44336;
        }
        /* استایل‌های جدید و ضروری */
        .thumbnail-container {
            width: 100%;
            height: 120px;
            position: relative;
            background: #000;
        }

        .thumbnail-video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .stream-thumbnail.active {
            border: 2px solid #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        }

        .stream-thumbnail {
            transition: all 0.3s ease;
            cursor: pointer;
        }

            .stream-thumbnail:hover {
                transform: translateY(-2px);
            }

        /* بهبود نمایش در موبایل */
        @@media (max-width: 768px) {
            .thumbnail-container

        {
            height: 80px;
        }

        2

        }

        /* وضعیت‌های مختلف */
        .status-connected {
            color: #28a745;
            border: 1px solid #28a745;
        }

        .status-connecting {
            color: #ffc107;
            border: 1px solid #ffc107;
        }

        .status-error {
            color: #dc3545;
            border: 1px solid #dc3545;
        }
        /* موبایل */
        @@media (max-width: 768px) {
            .thumbnail-placeholder, .thumbnail-video

        {
            height: 80px;
        }

        .thumbnail-placeholder .bi {
            font-size: 1.5rem;
        }

        }
        /* بهبود responsive */
        @@media (max-width: 768px) {
            .thumbnail-placeholder, .thumbnail-video

        {
            height: 80px;
        }

        .thumbnail-placeholder .bi {
            font-size: 1.5rem;
        }

        .loading-text {
            font-size: 9px;
        }

        }
        .fade-in {
            animation: fadeIn 0.5s ease;
        }

        /* حالت موبایل */
        @@media (max-width: 768px) {
            .streams-grid {
                grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
                padding: 10px;
            }

            .thumbnail-video {
                height: 80px;
            }

            .stream-info {
                padding: 5px;
            }

            .stream-title {
                font-size: 10px;
            }

            .stream-stats {
                font-size: 8px;
            }

            #controls {
                top: 10px;
                right: 10px;
            }

            #connectionStatus {
                top: 10px;
                left: 10px;
            }
        }

        /* حالت تمام‌صفحه */
        :fullscreen .main-container {
            width: 100vw;
            height: 100vh;
        }

        :-webkit-full-screen .main-container {
            width: 100vw;
            height: 100vh;
        }

        :-moz-full-screen .main-container {
            width: 100vw;
            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- وضعیت اتصال -->
        <div id="connectionStatus" class="status-connecting">
            <i class="bi bi-wifi"></i> در حال اتصال...
        </div>

        <!-- کنترل‌ها -->
        <div id="controls">
            <button class="control-btn" id="toggleFullscreen" title="حالت تمام‌صفحه">
                <i class="bi bi-fullscreen"></i>
            </button>
            <button class="control-btn" id="refreshStreams" title="بروزرسانی لیست">
                <i class="bi bi-arrow-clockwise"></i>
            </button>
            <button class="control-btn exit" id="exitViewer" title="خروج">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <!-- ویدیوی اصلی -->
        <div id="mainVideoContainer">
            <video id="mainVideo" autoplay playsinline></video>
        </div>

        <!-- لیست پخش‌ها -->
        <div id="streamsListContainer">
            <div class="streams-header">
                <div class="streams-title">
                    <i class="bi bi-collection-play"></i>
                    پخش‌های زنده فعال (<span id="streamsCount">0</span>)
                </div>
                <button class="toggle-streams-btn" id="toggleStreamsList">
                    <i class="bi bi-chevron-down" id="toggleIcon"></i>
                </button>
            </div>
            <div class="streams-grid" id="streamsGrid">
                <!-- پخش‌ها اینجا نمایش داده می‌شوند -->
            </div>
        </div>

        <!-- صفحه خالی -->
        <div id="emptyState">
            <i class="bi bi-camera-video-off empty-icon"></i>
            <div class="empty-text">هیچ پخش زنده‌ای در حال حاضر فعال نیست</div>
            <div class="mt-3">
                <button class="btn btn-outline-light btn-sm" id="retryButton">
                    <i class="bi bi-arrow-clockwise"></i> تلاش مجدد
                </button>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/fullscreen-viewer.js"></script>
</body>
</html>