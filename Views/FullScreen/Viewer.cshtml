                }, 50);
            }

            updateChatStatus(enabled) {
                this.chatEnabled = enabled;
                const messageInput = document.getElementById('messageInput');
                const sendButton = document.getElementById('sendMessage');

                if (enabled) {
                    messageInput.placeholder = "پیام خود را بنویسید...";
                    messageInput.disabled = false;
                    sendButton.disabled = false;

                    // نمایش پیام‌های موجود
                    const messagesContainer = document.getElementById('chatMessages');
                    messagesContainer.style.display = 'flex';
                } else {
                    messageInput.placeholder = "چت غیرفعال است";
                    messageInput.disabled = true;
                    sendButton.disabled = true;

                    // مخفی کردن تمام پیام‌ها
                    const messagesContainer = document.getElementById('chatMessages');
                    messagesContainer.style.display = 'none';
                }
            }

            // مدیریت قلب‌ها
            async sendHeart() {
                if (!this.currentMainStream) return;

                try {
                    await this.connection.invoke("SendHeart", this.currentMainStream);
                    this.createHeartAnimation();
                } catch (error) {
                    console.error("❌ Error sending heart:", error);
                }
            }

            handleHeartReceived(heartData) {
                this.createHeartAnimation();
            }

            createHeartAnimation() {
                for (let i = 0; i < 15; i++) {
                    setTimeout(() => {
                        createHeart();
                    }, i * 100);
                }
            }

            updateHeartsStatus(enabled) {
                const heartButton = document.getElementById('floatingHeartButton');
                if (enabled) {
                    heartButton.disabled = false;
                } else {
                    heartButton.disabled = true;
                }
            }

            // مدیریت مسابقه
            showQuiz(quizInfo) {
                const overlay = document.getElementById('quizOverlay');
                const question = document.getElementById('quizQuestion');
                const options = document.getElementById('quizOptions');
                const timer = document.getElementById('quizTimer');

                this.currentQuiz = quizInfo;

                // Set question
                question.textContent = quizInfo.question.question;

                // Create options
                options.innerHTML = quizInfo.question.options.map((option, index) => `
                    <button class="quiz-option" data-index="${index}" onclick="fullScreenViewer.submitAnswer(${index})">
                        ${this.escapeHtml(option)}
                    </button>
                `).join('');

                // Start timer
                this.startQuizTimer(quizInfo.question.timeLimit, timer);

                // Show overlay
                overlay.style.display = 'flex';
            }

            startQuizTimer(duration, timerElement) {
                let timeLeft = duration;
                timerElement.textContent = timeLeft;

                this.quizTimer = setInterval(() => {
                    timeLeft--;
                    timerElement.textContent = timeLeft;

                    if (timeLeft <= 0) {
                        clearInterval(this.quizTimer);
                        this.hideQuiz();
                    }
                }, 1000);
            }

            async submitAnswer(answerIndex) {
                if (!this.currentQuiz) return;

                try {
                    await this.connection.invoke("SubmitQuizAnswer", this.currentQuiz.id, answerIndex);

                    // Disable all options
                    document.querySelectorAll('.quiz-option').forEach(btn => {
                        btn.disabled = true;
                    });
                } catch (error) {
                    console.error("Error submitting answer:", error);
                }
            }

            showQuizResult(isCorrect, message) {
                const result = document.getElementById('quizResult');
                result.innerHTML = message;
                result.className = `quiz-result ${isCorrect ? 'result-correct' : 'result-incorrect'}`;
                result.style.display = 'block';

                setTimeout(() => {
                    this.hideQuiz();
                }, 3000);
            }

            hideQuiz() {
                const overlay = document.getElementById('quizOverlay');
                overlay.style.display = 'none';

                if (this.quizTimer) {
                    clearInterval(this.quizTimer);
                }

                this.currentQuiz = null;
            }

            showEliminationMessage(message) {
                const alert = document.createElement('div');
                alert.className = 'alert alert-danger position-fixed';
                alert.style.cssText = 'top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 300; min-width: 300px; text-align: center;';
                alert.innerHTML = `
                    <h4>${message}</h4>
                    <p>شما می‌توانید مسابقه را تماشا کنید اما نمی‌توانید در آن شرکت کنید.</p>
                `;

                document.body.appendChild(alert);

                setTimeout(() => {
                    alert.remove();
                }, 5000);
            }

            // به‌روزرسانی اطلاعات کاربر
            updateUserInfo(user) {
                if (user.connectionId === this.userInfo.connectionId) {
                    this.userInfo = { ...this.userInfo, ...user };

                    // Update UI
                    const userName = document.querySelector('.user-name');
                    const userScore = document.querySelector('.user-score');
                    const heartsCount = document.querySelector('.hearts-count');

                    if (userName) userName.textContent = this.userInfo.name;
                    if (userScore) userScore.textContent = `امتیاز: ${this.userInfo.score}`;
                    if (heartsCount) heartsCount.textContent = this.userInfo.hearts;
                }
            }

            // متدهای کمکی
            showEmptyState() {
                if (this.emptyState) this.emptyState.style.display = 'flex';
                if (this.streamsListContainer) this.streamsListContainer.style.display = 'none';
            }

            hideEmptyState() {
                if (this.emptyState) this.emptyState.style.display = 'none';
                if (this.streamsListContainer) this.streamsListContainer.style.display = 'block';
            }

            updateStreamsCount() {
                if (this.streamsCount) {
                    this.streamsCount.textContent = this.activeStreams.size;
                }
            }

            updateStreamsListVisibility() {
                if (!this.streamsListContainer) return;

                if (this.activeStreams.size <= 1) {
                    this.streamsListContainer.style.display = 'none';
                } else {
                    this.streamsListContainer.style.display = 'block';
                }
            }

            toggleStreamsListVisibility() {
                const container = document.getElementById('streamsListContainer');
                const revealBtn = document.getElementById('revealStreamsBtn');

                if (container.classList.contains('visible')) {
                    container.classList.remove('visible');
                    revealBtn.style.display = 'flex';
                } else {
                    container.classList.add('visible');
                    revealBtn.style.display = 'none';
                }
            }

            updateConnectionStatus(status, text) {
                if (this.connectionStatus) {
                    this.connectionStatus.textContent = text;
                    this.connectionStatus.className = `status-${status}`;

                    // Update icon based on status
                    const icon = this.connectionStatus.querySelector('i');
                    if (icon) {
                        switch (status) {
                            case 'connected':
                                icon.className = 'bi bi-wifi';
                                break;
                            case 'error':
                                icon.className = 'bi bi-wifi-off';
                                break;
                            case 'connecting':
                            case 'reconnecting':
                                icon.className = 'bi bi-wifi';
                                break;
                        }
                    }
                }
            }

            showRetryButton() {
                if (this.retryButton) {
                    this.retryButton.style.display = 'block';
                }
            }

            async retryConnection() {
                this.updateConnectionStatus('connecting', 'در حال اتصال مجدد...');
                this.retryButton.style.display = 'none';

                try {
                    await this.initializeSignalR();
                } catch (error) {
                    console.error("Retry failed:", error);
                    this.showRetryButton();
                }
            }

            exitViewerMode() {
                if (confirm('آیا می‌خواهید از حالت تمام‌صفحه خارج شوید؟')) {
                    window.location.href = '/';
                }
            }

            escapeHtml(unsafe) {
                return unsafe
                    .replace(/&/g, "&amp;")
                    .replace(/</g, "&lt;")
                    .replace(/>/g, "&gt;")
                    .replace(/"/g, "&quot;")
                    .replace(/'/g, "&#039;");
            }
        }

        // راه‌اندازی اصلی
        document.addEventListener('DOMContentLoaded', () => {
            console.log("🎬 Starting FullScreen Viewer...");
            handleOrientationChange();

            // اضافه کردن event listeners برای تغییر سایز و orientation
            window.addEventListener('resize', handleOrientationChange);
            window.addEventListener('orientationchange', handleOrientationChange);

            // راه‌اندازی مدیریت‌کننده اصلی
            window.fullScreenViewer = new FullScreenViewer();

            // به‌روزرسانی مدیریت قلب برای استفاده از SignalR
            document.getElementById('floatingHeartButton').addEventListener('click', function() {
                if (window.fullScreenViewer) {
                    window.fullScreenViewer.sendHeart();
                }

                // انیمیشن محلی
                this.classList.add('pulse');
                setTimeout(() => {
                    this.classList.remove('pulse');
                }, 600);
            });
        });
    </script>
