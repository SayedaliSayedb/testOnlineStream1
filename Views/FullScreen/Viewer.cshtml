﻿@{
ViewData["Title"] = "نمایش تمام‌صفحه پخش زنده";
Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>پخش زنده مسابقه</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100;200;300;400;500;600;700;800;900&display=swap');

        :root {
            --primary-font: 'Vazirmatn', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            --secondary-font: 'Vazirmatn', Arial, sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            background: #000;
            color: #fff;
            font-family: var(--primary-font);
            overflow: hidden;
            height: 100%;
            width: 100%;
            position: fixed;
        }

        .main-container {
            height: 100vh;
            width: 100vw;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: #000;
            overflow: hidden;
        }

        #mainVideoContainer {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 10;
            background: #000;
        }

        #mainVideo {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: #000;
        }

        .top-bar {
            position: fixed;
            top: env(safe-area-inset-top, 10px);
            right: 10px;
            z-index: 100;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px 12px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
            max-width: calc(100vw - 20px);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .user-details {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .user-name {
            font-weight: bold;
            font-size: 13px;
            font-family: var(--primary-font);
        }

        .user-score {
            font-size: 11px;
            color: #ffd700;
            font-family: var(--primary-font);
        }

        .hearts-section {
            display: flex;
            align-items: center;
            gap: 6px;
            background: rgba(255, 0, 0, 0.2);
            padding: 5px 10px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .hearts-count {
            font-weight: bold;
            font-size: 14px;
            font-family: var(--primary-font);
        }

        .heart-icon {
            color: #ff3366;
            font-size: 18px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .heart-icon:hover {
                transform: scale(1.2);
            }

        .chat-container {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 35vh;
            max-height: 35vh;
            z-index: 90;
            display: flex;
            flex-direction: column;
            background: transparent;
            pointer-events: none;
        }

        .chat-gradient-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 40%, transparent 100%);
            pointer-events: none;
            z-index: 91;
        }

        .chat-messages {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 4px;
            padding: 10px 15px 70px 15px;
            overflow-y: auto;
            z-index: 92;
            pointer-events: auto;
            max-height: calc(35vh - 80px);
        }

        .message {
            padding: 8px 12px;
            font-size: 14px;
            line-height: 1.4;
            color: rgba(255, 255, 255, 0.95);
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
            font-family: var(--secondary-font);
            animation: messageSlide 0.5s ease;
            transform-origin: bottom;
            min-height: 40px;
            display: flex;
            align-items: center;
            word-break: break-word;
            max-width: 85%;
            align-self: flex-start;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }

        @@keyframes messageSlide {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .chat-input-container {
            position: fixed;
            bottom: env(safe-area-inset-bottom, 10px);
            left: 10px;
            right: 10px;
            display: flex;
            gap: 10px;
            align-items: center;
            z-index: 95;
            pointer-events: auto;
            padding: 5px 0;
        }

        .chat-input {
            flex: 1;
            display: flex;
            gap: 10px;
        }

            .chat-input input {
                flex: 1;
                background: rgba(255, 255, 255, 0.15);
                border: none;
                border-radius: 25px;
                padding: 14px 20px;
                color: white;
                outline: none;
                font-size: 14px;
                font-family: var(--primary-font);
                backdrop-filter: blur(10px);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

                .chat-input input::placeholder {
                    color: rgba(255, 255, 255, 0.7);
                }

                .chat-input input:disabled {
                    opacity: 0.5;
                    cursor: not-allowed;
                }

        .send-btn {
            background: rgba(0, 123, 255, 0.9);
            border: none;
            border-radius: 50%;
            width: 52px;
            height: 52px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 20px rgba(0, 123, 255, 0.4);
            flex-shrink: 0;
        }

            .send-btn:disabled {
                background: rgba(108, 117, 125, 0.9);
                cursor: not-allowed;
                transform: none;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

            .send-btn i {
                font-size: 20px;
                position: relative;
                left: -1px;
            }

            .send-btn:hover:not(:disabled) {
                background: rgba(0, 123, 255, 1);
                transform: scale(1.08);
                box-shadow: 0 6px 25px rgba(0, 123, 255, 0.6);
            }

        .floating-heart-btn {
            background: linear-gradient(135deg, #ff3366, #ff6b9c);
            border: none;
            border-radius: 50%;
            width: 52px;
            height: 52px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 20px rgba(255, 51, 102, 0.4);
            flex-shrink: 0;
        }

            .floating-heart-btn:disabled {
                background: linear-gradient(135deg, #6c757d, #495057);
                cursor: not-allowed;
                transform: none;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

            .floating-heart-btn i {
                font-size: 22px;
                filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
            }

            .floating-heart-btn:hover:not(:disabled) {
                transform: scale(1.08);
                box-shadow: 0 6px 25px rgba(255, 51, 102, 0.6);
            }

            .floating-heart-btn:active:not(:disabled) {
                transform: scale(0.95);
            }

            .floating-heart-btn.pulse {
                animation: heartPulse 0.6s ease;
            }

        @@keyframes heartPulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.2);
            }

            100% {
                transform: scale(1);
            }
        }

        #connectionStatus {
            position: fixed;
            top: env(safe-area-inset-top, 20px);
            left: 20px;
            z-index: 100;
            background: rgba(0, 0, 0, 0.7);
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            font-family: var(--primary-font);
        }

        .status-connected {
            color: #28a745;
        }

        .status-disconnected {
            color: #dc3545;
        }

        .status-connecting {
            color: #ffc107;
        }

        #emptyState {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: #000;
            z-index: 5;
        }

        .empty-icon {
            font-size: 4rem;
            color: #333;
            margin-bottom: 20px;
        }

        .empty-text {
            color: #666;
            font-size: 1.2rem;
            text-align: center;
            font-family: var(--primary-font);
        }

        .heart-animation {
            position: absolute;
            font-size: 24px;
            color: #ff3366;
            opacity: 0;
            z-index: 60;
            pointer-events: none;
        }

        @@keyframes floatUp {
            0% {
                transform: translateY(0) scale(0.5);
                opacity: 1;
            }

            100% {
                transform: translateY(-100px) scale(1.5);
                opacity: 0;
            }
        }

        .chat-messages::-webkit-scrollbar {
            width: 6px;
        }

        .chat-messages::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
        }

        .chat-messages::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 3px;
        }

            .chat-messages::-webkit-scrollbar-thumb:hover {
                background: rgba(255, 255, 255, 0.5);
            }

        /* استایل‌های موبایل */
        @@media (max-width: 768px) {
            .chat-container {
                height: 30vh;
                max-height: 30vh;
            }

            .chat-messages {
                padding: 8px 12px 60px 12px;
                max-height: calc(30vh - 70px);
            }

            .chat-input-container {
                bottom: env(safe-area-inset-bottom, 8px);
                left: 8px;
                right: 8px;
            }

            .send-btn,
            .floating-heart-btn {
                width: 48px;
                height: 48px;
            }

                .send-btn i {
                    font-size: 18px;
                }

                .floating-heart-btn i {
                    font-size: 20px;
                }

            .top-bar {
                top: env(safe-area-inset-top, 5px);
                right: 5px;
                padding: 6px 10px;
            }

            .user-avatar {
                width: 35px;
                height: 35px;
            }

            .user-name {
                font-size: 12px;
            }

            .user-score {
                font-size: 10px;
            }

            .hearts-count {
                font-size: 14px;
            }

            .heart-icon {
                font-size: 18px;
            }

            .chat-input input {
                padding: 12px 16px;
                font-size: 16px;
            }

            .message {
                font-size: 14px;
                padding: 10px 14px;
                max-width: 90%;
            }
        }

        @@media (max-width: 480px) {
            .chat-container {
                height: 28vh;
                max-height: 28vh;
            }

            .chat-messages {
                padding: 6px 10px 55px 10px;
                max-height: calc(28vh - 65px);
            }

            .chat-input-container {
                bottom: env(safe-area-inset-bottom, 5px);
                left: 5px;
                right: 5px;
            }

            .send-btn,
            .floating-heart-btn {
                width: 44px;
                height: 44px;
            }

                .send-btn i {
                    font-size: 17px;
                }

                .floating-heart-btn i {
                    font-size: 19px;
                }

            .chat-input input {
                padding: 10px 14px;
                font-size: 16px;
            }

            .message {
                font-size: 13px;
                padding: 8px 12px;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="top-bar">
            <div class="user-info">
                <img class="user-avatar" src="data:image/svg+xml;base64,">
                <div class="user-details">
                    <div class="user-name">کاربر مسابقه</div>
                    <div class="user-score">امتیاز: 1250</div>
                </div>
            </div>
            <div class="hearts-section">
                <div class="hearts-count">150</div>
                <i class="bi bi-heart-fill heart-icon"></i>
            </div>
        </div>

        <div class="chat-container">
            <div class="chat-gradient-overlay"></div>
            <div class="chat-messages" id="chatMessages"></div>
            <div class="chat-input-container">
                <div class="chat-input">
                    <button class="send-btn" id="sendMessage"><i class="bi bi-send"></i></button>
                    <input type="text" placeholder="پیام خود را بنویسید..." id="messageInput">
                </div>
                <button class="floating-heart-btn" id="floatingHeartButton">
                    <i class="bi bi-heart-fill"></i>
                </button>
            </div>
        </div>

        <div id="mainVideoContainer">
            <video id="mainVideo" autoplay playsinline></video>
        </div>

        <div id="connectionStatus" class="status-connecting">
            <i class="bi bi-wifi"></i> در حال اتصال...
        </div>

        <div id="emptyState" style="display:none;">
            <i class="bi bi-camera-video-off empty-icon"></i>
            <div class="empty-text">هیچ پخش زنده‌ای در حال حاضر فعال نیست</div>
            <div class="mt-3">
                <button class="btn btn-outline-light btn-sm" id="retryButton">
                    <i class="bi bi-arrow-clockwise"></i> تلاش مجدد
                </button>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        // کلاس اصلی مدیریت پخش زنده
        class FullScreenViewer {
            constructor() {
                this.peerConnection = null;
                this.currentStreamId = null;
                this.connection = null;
                this.userInfo = {
                    name: "کاربر مسابقه",
                    score: 1250,
                    hearts: 150,
                    connectionId: null
                };
                this.chatEnabled = true;

                this.initialize();
            }

            async initialize() {
                await this.initializeSignalR();
                this.setupEventListeners();
                console.log("🚀 FullScreen Viewer initialized");
            }

            async initializeSignalR() {
                try {
                    this.connection = new signalR.HubConnectionBuilder()
                        .withUrl("/webrtcHub")
                        .withAutomaticReconnect([0, 2000, 5000, 10000, 30000])
                        .build();

                    this.setupHubListeners();
                    await this.connection.start();

                    console.log("✅ SignalR connection established");
                    this.updateConnectionStatus('connected', 'اتصال برقرار شد');
                    this.userInfo.connectionId = this.connection.connectionId;

                    // درخواست لیست استریم‌ها
                    await this.connection.invoke("RequestStreamList");

                } catch (error) {
                    console.error("❌ SignalR connection failed:", error);
                    this.updateConnectionStatus('error', 'خطا در اتصال');
                    this.showRetryButton();
                }
            }

            setupHubListeners() {
                // دریافت تاریخچه چت
                this.connection.on("ChatHistory", (history) => {
                    this.displayChatHistory(history);
                });
                    this.connection.on("StreamStarted", (streamInfo) => {
            console.log("🎬 New stream started:", streamInfo);
            this.handleNewStream(streamInfo);
        });
                this.connection.on("ChatHistoryCleared", () => {
                    this.clearChatMessages();
                });

                // رویدادهای اصلی استریم
                this.connection.on("StreamListUpdated", (streams) => {
                    console.log("📋 Received stream list:", streams);
                    this.handleStreamListUpdate(streams);
                });

                        this.connection.on("JoinedStream", (streamInfo) => {
            console.log("✅ Joined stream:", streamInfo);
            this.currentStreamId = streamInfo.streamId;

            // 🔥 بررسی کن آیا استریمر آنلاین است یا نه
            if (streamInfo.hasStreamer && streamInfo.streamerConnectionId) {
                console.log("🎬 Streamer is online, initiating WebRTC...");
                this.initiateWebRTCConnection(streamInfo.streamerConnectionId);
            } else {
                console.log("⏳ Streamer is not online yet, waiting...");
                // حالت انتظار - وقتی استریمر وصل شد، signaling انجام می‌شود
                this.updateConnectionStatus('waiting', 'در انتظار اتصال استریمر...');
            }
        });
                this.connection.on("StreamerConnected", (streamId) => {
            console.log("🎬 Streamer came online for stream:", streamId);
            if (this.currentStreamId === streamId) {
                // دوباره سعی کن WebRTC connection برقرار کنی
                this.requestStreamerConnection(streamId);
            }
        });
                this.connection.on("StreamEnded", (streamId) => {
                    console.log("⏹ Stream ended:", streamId);
                    if (this.currentStreamId === streamId) {
                        this.handleStreamEnded();
                    }
                });

                // WebRTC Signaling
                this.connection.on("ReceiveSignal", (signal) => {
                    this.handleSignal(signal);
                });

                // چت و تعاملات
                this.connection.on("ChatMessageReceived", (message) => {
                    this.displayChatMessage(message);
                });

                this.connection.on("ChatStatusUpdated", (enabled) => {
                    this.updateChatStatus(enabled);
                });

                this.connection.on("HeartReceived", (heartData) => {
                    this.handleHeartReceived(heartData);
                });

                this.connection.on("HeartsStatusUpdated", (enabled) => {
                    this.updateHeartsStatus(enabled);
                });

                // مسابقه
                this.connection.on("QuizStarted", (quizInfo) => {
                    this.showQuiz(quizInfo);
                });

                this.connection.on("QuizEnded", (quizInfo) => {
                    this.hideQuiz();
                });

                this.connection.on("QuizAnswerResult", (isCorrect, message) => {
                    this.showQuizResult(isCorrect, message);
                });

                this.connection.on("Eliminated", (message) => {
                    this.showEliminationMessage(message);
                });

                // مدیریت اتصال
                this.connection.onreconnecting(() => {
                    console.log("🔄 Reconnecting...");
                    this.updateConnectionStatus('reconnecting', 'در حال اتصال مجدد...');
                });

                this.connection.onreconnected(() => {
                    console.log("✅ Reconnected");
                    this.updateConnectionStatus('connected', 'اتصال برقرار شد');
                    this.requestStreamList();
                });

                this.connection.onclose(() => {
                    console.log("❌ Connection closed");
                    this.updateConnectionStatus('error', 'اتصال قطع شد');
                });
            }
                    handleNewStream(streamInfo) {
            // اگر در حال حاضر به استریمی متصل نیستیم، به استریم جدید متصل شویم
            if (!this.currentStreamId) {
                console.log("🔄 Connecting to new stream:", streamInfo.streamId);
                this.joinStream(streamInfo);
            } else {
                console.log("ℹ️ Already connected to a stream, ignoring new stream");
            }
        }
                async requestStreamerConnection(streamId) {
            try {
                console.log("🔄 Requesting streamer connection for stream:", streamId);
                await this.connection.invoke("RequestStreamerConnection", streamId);
            } catch (error) {
                console.error("❌ Error requesting streamer connection:", error);
            }
        }
        // 🔥 اصلاح متد handleStreamListUpdate برای اتصال خودکار
        handleStreamListUpdate(streams) {
            if (!streams || streams.length === 0) {
                this.showEmptyState();
                return;
            }

            this.hideEmptyState();

            // فقط اگر به استریمی متصل نیستیم، به اولین استریم متصل شویم
            if (!this.currentStreamId) {
                const firstStream = streams[0];
                this.joinStream(firstStream);
            } else {
                console.log("ℹ️ Already connected to stream:", this.currentStreamId);
            }
        }
            setupEventListeners() {
                // ارسال پیام چت
                document.getElementById('sendMessage').addEventListener('click', () => {
                    this.sendChatMessage();
                });

                document.getElementById('messageInput').addEventListener('keypress', (e) => {
                    if (e.key === 'Enter') {
                        this.sendChatMessage();
                    }
                });

                // ارسال قلب
                document.getElementById('floatingHeartButton').addEventListener('click', () => {
                    this.sendHeart();
                });

                // تلاش مجدد اتصال
                document.getElementById('retryButton').addEventListener('click', () => {
                    this.retryConnection();
                });
            }

            handleStreamListUpdate(streams) {
                if (!streams || streams.length === 0) {
                    this.showEmptyState();
                    return;
                }

                this.hideEmptyState();

                // اتصال به اولین استریم فعال
                const firstStream = streams[0];
                this.joinStream(firstStream);
            }

            async joinStream(stream) {
                try {
                    console.log("🎯 Joining stream:", stream.streamId);
                    await this.connection.invoke("JoinStream", stream.streamId, this.userInfo.name);
                } catch (error) {
                    console.error("❌ Error joining stream:", error);
                }
            }

            async initiateWebRTCConnection(streamerConnectionId) {
                try {
                    console.log("🔗 Starting WebRTC with:", streamerConnectionId);

                    const configuration = {
                        iceServers: [
                            { urls: 'stun:stun.l.google.com:19302' },
                            { urls: 'stun:stun1.l.google.com:19302' }
                        ]
                    };

                    this.peerConnection = new RTCPeerConnection(configuration);

                    // مدیریت trackهای دریافتی
                    this.peerConnection.ontrack = (event) => {
                        console.log("🎬 Received remote track:", event.track.kind);
                        if (event.streams && event.streams[0]) {
                            this.handleRemoteStream(event.streams[0]);
                        }
                    };

                    // مدیریت ICE candidates
                    this.peerConnection.onicecandidate = (event) => {
                        if (event.candidate) {
                            this.connection.invoke("SendSignal", streamerConnectionId, "ice-candidate", JSON.stringify(event.candidate))
                                .catch(err => console.warn("Failed to send ICE candidate:", err));
                        }
                    };

                    // ایجاد offer
                    const offer = await this.peerConnection.createOffer({
                        offerToReceiveAudio: true,
                        offerToReceiveVideo: true
                    });

                    await this.peerConnection.setLocalDescription(offer);

                    await this.connection.invoke("SendSignal", streamerConnectionId, "offer", JSON.stringify(offer));

                    console.log("✅ WebRTC offer sent");

                } catch (error) {
                    console.error("❌ WebRTC initiation failed:", error);
                }
            }

            async handleSignal(signal) {
                if (!this.peerConnection) return;

                try {
                    const { type, data } = signal;

                    switch (type) {
                        case 'answer':
                            console.log("📥 Received answer");
                            const answer = JSON.parse(data);
                            await this.peerConnection.setRemoteDescription(answer);
                            break;

                        case 'ice-candidate':
                            console.log("📥 Received ICE candidate");
                            const candidate = JSON.parse(data);
                            await this.peerConnection.addIceCandidate(candidate);
                            break;
                    }
                } catch (error) {
                    console.error("❌ Error handling signal:", error);
                }
            }

            handleRemoteStream(remoteStream) {
                console.log("🎬 Setting remote stream to video element");
                const videoElement = document.getElementById('mainVideo');

                // متوقف کردن ویدیوی قبلی
                videoElement.pause();
                videoElement.srcObject = null;

                // تنظیم ویدیوی جدید
                videoElement.srcObject = remoteStream;

                videoElement.onloadedmetadata = () => {
                    console.log("✅ Video metadata loaded");
                    videoElement.play().then(() => {
                        console.log("▶️ Video started playing successfully");
                        this.updateConnectionStatus('connected', 'پخش زنده');
                    }).catch(error => {
                        console.warn("⚠️ Auto-play prevented:", error);
                        // استراتژی fallback برای موبایل
                        if (/iPhone|iPad|iPod|Android/i.test(navigator.userAgent)) {
                            videoElement.muted = true;
                            videoElement.play().catch(e => console.warn("Fallback play also failed:", e));
                        }
                    });
                };

                videoElement.onerror = (error) => {
                    console.error("❌ Video error:", error);
                };
            }

            handleStreamEnded() {
                console.log("🛑 Current stream ended");
                this.currentStreamId = null;
                const videoElement = document.getElementById('mainVideo');
                videoElement.srcObject = null;
                this.showEmptyState();
            }

            async sendChatMessage() {
                const input = document.getElementById('messageInput');
                const message = input.value.trim();

                if (!message || !this.currentStreamId || !this.chatEnabled) return;

                try {
                    await this.connection.invoke("SendChatMessage", message, this.currentStreamId);

                    // نمایش پیام محلی
                    this.displayChatMessage({
                        senderName: "شما",
                        message: message,
                        timestamp: new Date()
                    });

                    input.value = '';

                    // فوکوس مجدد به input
                    setTimeout(() => {
                        input.focus();
                    }, 100);

                } catch (error) {
                    console.error("❌ Error sending chat message:", error);
                }
            }

            displayChatMessage(message) {
                if (!this.chatEnabled) return;

                const messagesContainer = document.getElementById('chatMessages');
                const messageElement = document.createElement('div');
                messageElement.className = 'message';

                const time = new Date(message.timestamp).toLocaleTimeString('fa-IR', {
                    hour: '2-digit',
                    minute: '2-digit'
                });

                messageElement.textContent = `${message.senderName}: ${message.message}`;
                messagesContainer.appendChild(messageElement);

                // اسکرول به پایین
                setTimeout(() => {
                    messagesContainer.scrollTop = messagesContainer.scrollHeight;
                }, 50);
            }

            displayChatHistory(history) {
                const messagesContainer = document.getElementById('chatMessages');
                messagesContainer.innerHTML = '';

                history.forEach(message => {
                    this.displayChatMessage(message);
                });
            }

            clearChatMessages() {
                const messagesContainer = document.getElementById('chatMessages');
                messagesContainer.innerHTML = '';
            }

            async sendHeart() {
                if (!this.currentStreamId) return;

                try {
                    await this.connection.invoke("SendHeart", this.currentStreamId);

                    // انیمیشن محلی
                    this.createHeartAnimation();

                } catch (error) {
                    console.error("❌ Error sending heart:", error);
                }
            }

            handleHeartReceived(heartData) {
                this.createHeartAnimation();
            }

            createHeartAnimation() {
                const heartBtn = document.getElementById('floatingHeartButton');
                heartBtn.classList.add('pulse');
                setTimeout(() => heartBtn.classList.remove('pulse'), 600);

                // ایجاد انیمیشن قلب‌های شناور
                for (let i = 0; i < 15; i++) {
                    setTimeout(() => {
                        this.createFloatingHeart();
                    }, i * 100);
                }
            }

            createFloatingHeart() {
                const heart = document.createElement('div');
                heart.innerHTML = '<i class="bi bi-heart-fill"></i>';
                heart.classList.add('heart-animation');

                const x = Math.random() * (window.innerWidth - 80) + 40;
                heart.style.left = `${x}px`;
                heart.style.bottom = '100px';

                document.querySelector('.main-container').appendChild(heart);

                const animation = heart.animate([
                    { transform: 'translateY(0) scale(0.5)', opacity: 1 },
                    { transform: `translateY(-${200 + Math.random() * 300}px) scale(1.5)`, opacity: 0 }
                ], {
                    duration: 1000 + Math.random() * 1200,
                    easing: 'cubic-bezier(0.2, 0.8, 0.3, 1)'
                });

                animation.onfinish = () => {
                    heart.remove();
                };
            }

            updateChatStatus(enabled) {
                this.chatEnabled = enabled;
                const messageInput = document.getElementById('messageInput');
                const sendButton = document.getElementById('sendMessage');

                if (enabled) {
                    messageInput.placeholder = "پیام خود را بنویسید...";
                    messageInput.disabled = false;
                    sendButton.disabled = false;
                } else {
                    messageInput.placeholder = "چت غیرفعال است";
                    messageInput.disabled = true;
                    sendButton.disabled = true;
                }
            }

            updateHeartsStatus(enabled) {
                const heartButton = document.getElementById('floatingHeartButton');
                heartButton.disabled = !enabled;
            }

            // متدهای مسابقه (در صورت نیاز می‌توانند پیاده‌سازی شوند)
            showQuiz(quizInfo) {
                console.log("📝 Quiz started:", quizInfo);
                // پیاده‌سازی رابط کاربری مسابقه
            }

            hideQuiz() {
                console.log("📝 Quiz ended");
                // پنهان کردن رابط کاربری مسابقه
            }

            showQuizResult(isCorrect, message) {
                console.log("📝 Quiz result:", isCorrect, message);
                // نمایش نتیجه مسابقه
            }

            showEliminationMessage(message) {
                console.log("💀 Elimination:", message);
                // نمایش پیام حذف
            }

            // متدهای کمکی
            async requestStreamList() {
                try {
                    await this.connection.invoke("RequestStreamList");
                console.log("📨 Requested stream list");
                } catch (error) {
                    console.error("❌ Error requesting stream list:", error);
                }
            }

            updateConnectionStatus(status, text) {
                const statusElement = document.getElementById('connectionStatus');
                if (statusElement) {
                    statusElement.textContent = text;
                    statusElement.className = `status-${status}`;

                    // آپدیت آیکون بر اساس وضعیت
                    const icon = statusElement.querySelector('i');
                    if (icon) {
                        switch (status) {
                            case 'connected':
                                icon.className = 'bi bi-wifi';
                                break;
                            case 'error':
                                icon.className = 'bi bi-wifi-off';
                                break;
                            case 'reconnecting':
                                icon.className = 'bi bi-wifi';
                                break;
                        }
                    }
                }
            }

            showEmptyState() {
                const emptyState = document.getElementById('emptyState');
                if (emptyState) emptyState.style.display = 'flex';
            }

            hideEmptyState() {
                const emptyState = document.getElementById('emptyState');
                if (emptyState) emptyState.style.display = 'none';
            }

            showRetryButton() {
                const retryButton = document.getElementById('retryButton');
                if (retryButton) retryButton.style.display = 'block';
            }

            async retryConnection() {
                this.updateConnectionStatus('connecting', 'در حال اتصال مجدد...');
                const retryButton = document.getElementById('retryButton');
                if (retryButton) retryButton.style.display = 'none';

                await this.initializeSignalR();
            }
        }

        // راه‌اندازی هنگام لود صفحه
        document.addEventListener('DOMContentLoaded', () => {
            console.log("🎬 Starting FullScreen Viewer...");
            window.fullScreenViewer = new FullScreenViewer();
        });
    </script>
