@{
    ViewData["Title"] = "نمایش تمام‌صفحه پخش زنده";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>پخش زنده مسابقه</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Vazirmatn:wght@@100;200;300;400;500;600;700;800;900&display=swap');

        :root {
            --primary-font: 'Vazirmatn', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            --secondary-font: 'Vazirmatn', Arial, sans-serif;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: #000;
            color: #fff;
            font-family: var(--primary-font);
            overflow: hidden;
            height: 100vh;
            width: 100vw;
        }

        .main-container {
            height: 100vh;
            width: 100vw;
            position: relative;
            background: #000;
            overflow: hidden;
        }

        #mainVideoContainer {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 10;
            background: #000;
        }

        #mainVideo {
            width: 100%;
            height: 100%;
            object-fit: contain;
            background: #000;
        }

        .top-bar {
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 50;
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 12px 20px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .user-details {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .user-name {
            font-weight: bold;
            font-size: 14px;
            font-family: var(--primary-font);
        }

        .user-score {
            font-size: 12px;
            color: #ffd700;
            font-family: var(--primary-font);
        }

        .hearts-section {
            display: flex;
            align-items: center;
            gap: 8px;
            background: rgba(255, 0, 0, 0.2);
            padding: 6px 12px;
            border-radius: 50px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .hearts-count {
            font-weight: bold;
            font-size: 16px;
            font-family: var(--primary-font);
        }

        .heart-icon {
            color: #ff3366;
            font-size: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .heart-icon:hover {
                transform: scale(1.2);
            }

        .chat-container {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 40vh;
            z-index: 40;
            display: flex;
            flex-direction: column;
            background: transparent;
            overflow: hidden;
            pointer-events: none;
        }

        .chat-gradient-overlay {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 40%, transparent 100%);
            pointer-events: none;
            z-index: 41;
        }

        .chat-messages {
            display: flex;
            flex-direction: column;
            gap: 4px;
            padding: 10px 20px 70px 20px;
            max-height: 100%;
            overflow-y: auto;
            z-index: 42;
            pointer-events: auto;
        }

        .message {
            padding: 8px 8px;
            font-size: 14px;
            line-height: 1.4;
            color: rgba(255, 255, 255, 0.95);
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.8);
            font-family: var(--secondary-font);
            animation: messageSlide 0.5s ease;
            transform-origin: bottom;
            min-height: 40px;
            display: flex;
            align-items: center;
            word-break: break-word;
            max-width: 85%;
            align-self: flex-start;
        }

        @@keyframes messageSlide {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .chat-input-container {
            position: absolute;
            bottom: 20px;
            left: 20px;
            right: 20px;
            display: flex;
            gap: 12px;
            align-items: center;
            z-index: 45;
            pointer-events: auto;
        }

        .chat-input {
            flex: 1;
            display: flex;
            gap: 10px;
        }

            .chat-input input {
                flex: 1;
                background: rgba(255, 255, 255, 0.15);
                border: none;
                border-radius: 25px;
                padding: 14px 20px;
                color: white;
                outline: none;
                font-size: 14px;
                font-family: var(--primary-font);
                backdrop-filter: blur(10px);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

                .chat-input input::placeholder {
                    color: rgba(255, 255, 255, 0.7);
                }

        .send-btn {
            background: rgba(0, 123, 255, 0.8);
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 15px rgba(0, 123, 255, 0.3);
        }

            .send-btn:hover {
                background: rgba(0, 123, 255, 1);
                transform: scale(1.05);
            }

        .floating-heart-btn {
            background: rgba(255, 51, 102, 0.8);
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 15px rgba(255, 51, 102, 0.4);
        }

            .floating-heart-btn:hover {
                background: rgba(255, 51, 102, 1);
                transform: scale(1.1);
            }

        #streamsListContainer {
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            z-index: 95;
            display: flex;
            justify-content: center;
            pointer-events: auto;
            transition: transform 0.32s cubic-bezier(.22,.9,.28,1), opacity .24s ease;
            transform: translateY(0);
            opacity: 1;
            padding: 10px 12px;
            background: transparent;
        }

        .streams-box {
            width: min(1100px, calc(100% - 36px));
            background: linear-gradient(180deg, rgba(0,0,0,0.6), rgba(0,0,0,0.45));
            border: 1px solid rgba(255,255,255,0.06);
            border-radius: 12px;
            padding: 8px;
            backdrop-filter: blur(12px);
        }

        .streams-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 12px;
            padding: 4px 6px;
        }

        .streams-title {
            font-size: 14px;
            font-weight: 700;
            color: #fff
        }

        .toggle-streams-btn {
            background: rgba(255,255,255,0.06);
            border: none;
            color: #fff;
            cursor: pointer;
            padding: 6px;
            border-radius: 8px;
        }

        .streams-horizontal {
            display: flex;
            gap: 10px;
            padding: 8px 6px;
            overflow-x: auto;
            white-space: nowrap;
            align-items: center;
        }

        .stream-thumbnail {
            min-width: 160px;
            max-width: 220px;
            height: 96px;
            border-radius: 10px;
            overflow: hidden;
            flex: 0 0 auto;
            background: #0b0b0b;
            border: 1px solid rgba(255,255,255,0.03);
            transition: transform .18s ease, box-shadow .18s ease;
        }

            .stream-thumbnail:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.6)
            }

            .stream-thumbnail.active {
                border-color: rgba(78,161,255,0.16);
                box-shadow: 0 12px 34px rgba(78,161,255,0.08)
            }

        .thumbnail-video {
            width: 100%;
            height: 60%;
            background: #000;
        }

        .stream-info {
            padding: 6px 8px;
            background: transparent
        }

        .stream-title {
            font-size: 13px;
            font-weight: 700;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap
        }

        .stream-stats {
            font-size: 11px;
            color: #ddd;
            display: flex;
            justify-content: space-between;
            margin-top: 4px
        }

        #streamsListContainer.collapsed {
            transform: translateY(92%);
            opacity: 0;
            pointer-events: none;
        }

        #revealStreamsBtn {
            position: fixed;
            left: 20px;
            bottom: 100px;
            z-index: 96;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(180deg, #161616, #0a0a0a);
            border: 1px solid rgba(255,255,255,0.1);
            display: none;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            color: #fff;
            box-shadow: 0 8px 28px rgba(0,0,0,0.6);
            backdrop-filter: blur(10px);
        }

        @@media (max-width: 768px) {
            #revealStreamsBtn {
                width: 46px;
                height: 46px;
                left: 15px;
                bottom: 80px;
            }
        }

        @@media (max-width: 480px) {
            #revealStreamsBtn {
                width: 44px;
                height: 44px;
                left: 12px;
                bottom: 70px;
            }
        }

        #revealStreamsBtn.show {
            display: flex;
        }

        .streams-horizontal::-webkit-scrollbar {
            height: 8px
        }

        .streams-horizontal::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.06);
            border-radius: 6px
        }

        #connectionStatus {
            position: absolute;
            top: 20px;
            left: 20px;
            z-index: 50;
            background: rgba(0, 0, 0, 0.7);
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            font-family: var(--primary-font);
        }

        .status-connected {
            color: #28a745;
        }

        #emptyState {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            background: #000;
            z-index: 5;
        }

        .empty-icon {
            font-size: 4rem;
            color: #333;
            margin-bottom: 20px;
        }

        .empty-text {
            color: #666;
            font-size: 1.2rem;
            text-align: center;
            font-family: var(--primary-font);
        }

        .heart-animation {
            position: absolute;
            font-size: 24px;
            color: #ff3366;
            opacity: 0;
            z-index: 60;
            pointer-events: none;
        }

        @@keyframes floatUp {
            0% {
                transform: translateY(0) scale(0.5);
                opacity: 1;
            }

            100% {
                transform: translateY(-100px) scale(1.5);
                opacity: 0;
            }
        }

        .chat-messages::-webkit-scrollbar {
            width: 6px;
        }

        .chat-messages::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 3px;
        }

        .chat-messages::-webkit-scrollbar-thumb {
            background: rgba(255, 255, 255, 0.3);
            border-radius: 3px;
        }

            .chat-messages::-webkit-scrollbar-thumb:hover {
                background: rgba(255, 255, 255, 0.5);
            }

        @@media (max-width: 768px) {
            .chat-container {
                height: 45vh;
            }

            .chat-messages {
                padding: 8px 15px 60px 15px;
            }
            .chat-input-container {
                bottom: 15px;
                left: 15px;
                right: 15px;
            }

            #revealStreamsBtn {
                width: 46px;
                height: 46px;
                left: 15px;
                bottom: 90px;
            }
        }

        @@media (max-width: 480px) {
            .chat-container {
                height: 50vh;
            }

            .chat-input-container {
                bottom: 12px;
                left: 12px;
                right: 12px;
            }

            #revealStreamsBtn {
                width: 44px;
                height: 44px;
                left: 12px;
                bottom: 80px;
            }

            .chat-container {
                bottom: 60px;
                height: 40vh;
            }

            .floating-heart-btn, .send-btn {
                width: 40px;
                height: 40px;
            }

            .chat-input input {
                padding: 10px 14px;
                font-size: 13px;
            }

            .message {
                font-size: 13px;
                padding: 8px 12px;
            }
        }

        @@media (max-width: 768px) {
            .top-bar {
                top: 10px;
                right: 10px;
                padding: 10px 15px;
            }

            .user-avatar {
                width: 35px;
                height: 35px;
            }

            .user-name {
                font-size: 12px;
            }

            .user-score {
                font-size: 10px;
            }

            .hearts-count {
                font-size: 14px;
            }

            .heart-icon {
                font-size: 18px;
            }

            .chat-container {
                /* قبل: bottom: 140px; height: 40vh; */
                bottom: 0px; /* قرارگیری نزدیک‌تر به پایین روی موبایل هم */
                height: 50vh;
            }

            .chat-input-container {
                bottom: 15px;
                left: 15px;
                right: 15px;
            }

            .floating-heart-btn, .send-btn {
                width: 44px;
                height: 44px;
            }

            .chat-input input {
                padding: 12px 16px;
            }

            .message {
                font-size: 14px;
                padding: 10px 14px;
                max-width: 90%;
            }

            #revealStreamsBtn {
                position: fixed;
                left: 20px;
                bottom: 90px;
                z-index: 96;
                width: 50px;
                height: 50px;
                border-radius: 50%;
                background: linear-gradient(180deg, #161616, #0a0a0a);
                border: 1px solid rgba(255, 255, 255, 0.1);
                display: none;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                color: #fff;
                box-shadow: 0 8px 28px rgba(0, 0, 0, 0.6);
                backdrop-filter: blur(10px);
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="top-bar">
            <div class="user-info">
                <img class="user-avatar" src="~/img/user.jpeg">
                <div class="user-details">
                    <div class="user-name">کاربر مسابقه</div>
                    <div class="user-score">امتیاز: 1250</div>
                </div>
            </div>
            <div class="hearts-section">
                <div class="hearts-count">150</div>
                <i class="bi bi-heart-fill heart-icon"></i>
            </div>
        </div>

        <div class="chat-container">
            <div class="chat-gradient-overlay" style="trans"></div>
            <div class="chat-messages" id="chatMessages"></div>
            <div class="chat-input-container">

                <div class="chat-input">
                    <button class="send-btn" id="sendMessage"><i class="bi bi-send"></i></button>
                    <input type="text" placeholder="پیام خود را بنویسید..." id="messageInput">

                </div>
                <button class="floating-heart-btn" id="floatingHeartButton">
                    <i class="bi bi-heart-fill"></i>
                </button>
            </div>
        </div>

        <div id="mainVideoContainer">
            <video id="mainVideo" autoplay playsinline></video>
        </div>

        <div id="streamsListContainer">
            <div class="streams-box">
                <div class="streams-header">
                    <div class="streams-title">
                        <i class="bi bi-collection-play"></i>
                        پخش‌های زنده فعال (<span id="streamsCount">0</span>)
                    </div>
                    <button class="toggle-streams-btn" id="toggleStreamsList" aria-expanded="true" title="باز/بسته کردن لیست">
                        <i class="bi bi-chevron-down" id="toggleIcon"></i>
                    </button>
                </div>

                <div class="streams-horizontal" id="streamsGrid"></div>
            </div>
        </div>

        <button id="revealStreamsBtn" title="نمایش پخش‌ها"><i class="bi bi-chevron-up" style="font-size:18px"></i></button>

        <div id="connectionStatus" class="status-connected">
            <i class="bi bi-wifi"></i> متصل
        </div>

        <div id="emptyState" style="display:none;">
            <i class="bi bi-camera-video-off empty-icon"></i>
            <div class="empty-text">هیچ پخش زنده‌ای در حال حاضر فعال نیست</div>
            <div class="mt-3">
                <button class="btn btn-outline-light btn-sm" id="retryButton">
                    <i class="bi bi-arrow-clockwise"></i> تلاش مجدد
                </button>
            </div>
        </div>
    </div>

    <script>
                (function () {
            const container = document.getElementById('streamsListContainer');
            const toggleBtn = document.getElementById('toggleStreamsList');
            const toggleIcon = document.getElementById('toggleIcon');
            const revealBtn = document.getElementById('revealStreamsBtn');
            const grid = document.getElementById('streamsGrid');

            let collapsed = false;

            function setCollapsed(val) {
                collapsed = !!val;
                if (collapsed) {
                    container.classList.add('collapsed');
                    toggleIcon.classList.remove('bi-chevron-down');
                    toggleIcon.classList.add('bi-chevron-up');
                    revealBtn.classList.add('show');
                } else {
                    container.classList.remove('collapsed');
                    toggleIcon.classList.remove('bi-chevron-up');
                    toggleIcon.classList.add('bi-chevron-down');
                    revealBtn.classList.remove('show');
                }
            }

            toggleBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                setCollapsed(!collapsed);
            });

            revealBtn.addEventListener('click', (e) => {
                e.stopPropagation();
                setCollapsed(false);
            });

            document.addEventListener('click', (e) => {
                if (container.contains(e.target) || toggleBtn.contains(e.target) || revealBtn.contains(e.target)) return;
                setCollapsed(true);
            });

            grid.addEventListener('click', (e) => e.stopPropagation());

            // ابتدا لیست را مخفی کنیم
            setCollapsed(true);
        })();

        document.getElementById('floatingHeartButton').addEventListener('click', function () {
            //const heartsCount = document.querySelector('.hearts-count');
            //let count = parseInt(heartsCount.textContent);
            //if (isNaN(count)) count = 0;
            for (let i = 0; i < 15; i++) {
                createHeart();
            }
        });

        function createHeart() {
            const heart = document.createElement('div');
            heart.innerHTML = '<i class="bi bi-heart-fill"></i>';
            heart.classList.add('heart-animation');
            const x = Math.random() * (window.innerWidth - 80) + 40;
            heart.style.left = `${x}px`;
            heart.style.bottom = '100px';
            document.querySelector('.main-container').appendChild(heart);
            const animation = heart.animate([
                { transform: 'translateY(0) scale(0.5)', opacity: 1 },
                { transform: `translateY(-${200 + Math.random() * 300}px) scale(1.5)`, opacity: 0 }
            ], {
                duration: 1000 + Math.random() * 1200,
                easing: 'cubic-bezier(0.2, 0.8, 0.3, 1)'
            });
            animation.onfinish = () => {
                heart.remove();
            };
        }

        document.getElementById('sendMessage').addEventListener('click', sendMessage);
        document.getElementById('messageInput').addEventListener('keypress', function (e) {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        function sendMessage() {
            const input = document.getElementById('messageInput');
            const message = input.value.trim();

            if (message) {
                const messagesContainer = document.getElementById('chatMessages');
                const newMessage = document.createElement('div');
                newMessage.classList.add('message');
                newMessage.textContent = `شما: ${message}`;

                messagesContainer.appendChild(newMessage);

                messagesContainer.scrollTop = messagesContainer.scrollHeight;
                input.value = '';
            }
        }

        function simulateInitialMessages() {

            const messagesContainer = document.getElementById('chatMessages');

            initialMessages.forEach(message => {
                const messageElement = document.createElement('div');
                messageElement.classList.add('message');
                messageElement.textContent = message;
                messagesContainer.appendChild(messageElement);
            });

            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        document.addEventListener('DOMContentLoaded', function () {
            simulateInitialMessages();
        });
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/fullscreen-viewer.js"></script>
</body>
</html>
